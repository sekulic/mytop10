<% if @photo_comment.errors.any? %>
$('#photo_comment_errors').show();      
$('#photo_comment_errors').html('<strong>Please correct the folowing: </strong><%= pluralize(@photo_comment.errors.count, "error") %><p><ul><%@photo_comment.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %></ul></p>');
<% else %> 
$('ul#list-photo-comm').prepend('<li class="list-group-item"><span class="badge"><%= @photo_comment.created_at.to_date.to_s(:long) %></span><h4  class="list-group-item-heading">Comment:</h4> <p class="lead"><%= @photo_comment.comment %></p><p class="text-primary">Comment posted by::&nbsp;<font color="black"><%= @photo_comment.name %></font></p></li>');
$('#photo_comment_comment').val('');
$('#photo_comment_name').val('');
<% end %>