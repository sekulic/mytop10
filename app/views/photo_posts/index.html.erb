<div class="row">
<div class="col-lg-8">
<div class="page-header">
	  <h1 id="tables">All Photo Posts </h1>
</div>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Created</th>
      <% if current_user.try(:admin?) %>
      <th>Actions</th>
      <% end %>      
    </tr>
  </thead>
  <tbody>
  <% idx = 0 %>	
  <% @photo_posts.each do |photo_post| %>
	  <% idx = idx + 1 %>
	  <% if(idx % 6 == 0) %>  
	  <% idx = 1 %>
	  <% end %>
	  <% if(idx % 5 == 0) %>
	  	<tr  class="active">
	  <% elsif(idx % 4 == 0) %>
	  	<tr  class="warning">
	  <% elsif(idx % 3 == 0) %>
	  	<tr  class="danger">
	  <% elsif(idx % 2 == 0) %>
	  	<tr  class="success">
	  <% elsif (idx % 1 == 0)%>		
	  	<tr  class="info">
	  <% end %>
      <td><a href="/photo_posts/<%= photo_post.id %>" class="tlink">
	  <div class="td-link">
      	<%= photo_post.title %>
      </div></a></td>	
      
      <td><a href="/photo_posts/<%= photo_post.id %>" class="tlink">
	  <div class="td-link">
	  	<%= photo_post.category.name %>
	  </div></a></td>
	  
      <td><a href="/photo_posts/<%= photo_post.id %>" class="tlink">
	  <div class="td-link">
	  	<%= photo_post.subcategory.name %>
	  </div></a></td>
	  	
      <td><a href="/photo_posts/<%= photo_post.id %>" class="tlink">
	  <div class="td-link">
	  	<%= photo_post.created_at.to_date.to_s(:long) %>
	  </div></a></td>
	  
      <% if current_user.try(:admin?) %>
      <td><%= link_to 'Show', photo_post %>
      <%= link_to 'Edit', edit_photo_post_path(photo_post) %>
      <%= link_to 'Destroy', photo_post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <% end %>      
    </tr>
  <% end %>   	
  </tbody>
</table>
<center>
<%= will_paginate @photo_posts, renderer: BootstrapPagination::Rails %>
</center>
<% if current_user.try(:admin?) %>
<%= link_to 'New Photo post', new_photo_post_path, :class => 'btn btn-primary' %>
<% end %> 
</div> 
<div class="col-lg-4">
</div> 	
</div>
