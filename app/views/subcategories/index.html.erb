<div class="row">
<div class="col-lg-9">
<%- model_class = Subcategory -%>	
<div class="page-header">
  <h1>Subcategories</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Category</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= link_to subcategory.id, subcategory_path(subcategory) %></td>
        <td><%= link_to subcategory.name, subcategory_path(subcategory) %></td>
        <td><%= subcategory.category.name %></td>
        <td><%=l subcategory.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_subcategory_path(subcategory), :class => 'btn btn-success' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      subcategory_path(subcategory),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_subcategory_path,
            :class => 'btn btn-primary' %>
</div>
</div>