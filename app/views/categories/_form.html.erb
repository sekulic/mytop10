<% if @category.errors.any? %>
<ul>
  <% @category.errors.full_messages.each do |msg| %>
    <li class="text-danger"><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @category, :html => { :multipart => true }, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label "Category", :class => 'col-lg-3 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :name, :class => 'form-control', :id => "Input", :placeholder => "Category name" %>
    </div>
  </div>   
  <div class="form-group">
  	<div class="col-lg-6 col-lg-offset-3">
    <%= f.submit "Save", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-danger' %>
  	</div>
  </div>
<% end %>
